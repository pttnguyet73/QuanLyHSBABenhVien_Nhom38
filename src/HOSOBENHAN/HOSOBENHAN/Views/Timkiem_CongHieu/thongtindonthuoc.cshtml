@{
    ViewData["Title"] = "Thông tin đơn thuốc";
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <title>Hồ sơ khám bệnh</title>
    <link rel="stylesheet" href="~/css/Style1.css"> <!-- kết nối file CSS -->
</head>
<body>

    @model DonThuocViewModel2

    <div class="prescription-container">
        <div class="prescription-title">
            <h3>
                <img src="~/medicine.png" alt="icon" style="height: 60px;width:60px;">
                Thông tin đơn thuốc
            </h3>
            
        </div>

        <div class="info-grid">
            <p><strong>Ngày tạo:</strong> @Model.NgayTao?.ToString("dd/MM/yyyy")</p>
            <p><strong>Người tạo:</strong> @Model.NguoiTaoHoTen</p>
        </div>

        <table class="prescription-table">
            <thead>
                <tr>
                    <th>TT</th>
                    <th>Tên thuốc</th>
                    <th>Số lượng</th>
                    <th>Đơn vị tính</th>
                    <th>Liều dùng</th>
                    <th>Ghi chú</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.ChiTietThuocs.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model.ChiTietThuocs[i].TenThuoc</td>
                        <td>@Model.ChiTietThuocs[i].SoLuong</td>
                        <td>@Model.ChiTietThuocs[i].DonViTinh</td>
                        <td>@Model.ChiTietThuocs[i].LieuDung</td>
                        <td>@Model.ChiTietThuocs[i].GhiChu</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="back-button">
            <button style="margin-top:20px" onclick="history.back()">Quay lại</button>
        </div>
    </div>


</body>

